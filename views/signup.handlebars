<body class="container my-5">
    <div class="small">
        <img src="/img/image.png" alt="Chatnow image" />
        <h4><b>Chatnow</b></h4>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1 class="text-center text-success mb-4">Sign Up</h1>
        <form action= "/signup" method= "POST" role= "form" enctype= "multipart/form-data" id="sample">
          <div class="mb-3">
            <label for="user-name" class="form-label">User Name</label>
            <input
              type="text"
              class="form-control"
              id="user-name"
              name="username"
              autocomplete="name"
              aria-describedby="username"
            />
            <span id="username" class="error" aria-live="polite"></span>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              autocomplete="email"
              aria-describedby="emails"
            />
            <span id="emails" class="error" aria-live="polite"></span>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              aria-describedby="pass"
            />
            <span id="pass" class="error" aria-live="polite"></span>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input
              type="file"
              class="form-control"
              id="filephoto"
              name="photo"
              accept="image/*"
              required
            />
          </div>

          <div class="mb-3">
            <label for="dob" class="form-label">Date of Birth</label>
            <input
              type="date"
              class="form-control"
              id="dob"
              name="dob"
              required
            />
          </div>

          <div class="mb-3">
            <label for="gender" class="form-label">Gender</label>
            <select class="form-select" id="gender" name="gender">
              <option value="">Select...</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="bio" class="form-label">Short Bio</label>
            <textarea
              class="form-control"
              id="bio"
              name="bio"
              rows="4"
              aria-describedby="bios"
            ></textarea>
            <span id="bios" class="error" aria-live="polite"></span>
          </div>
          <button type="submit" class="btn btn-success w-100">Sign Up</button>
        </form>
      </div>
    </div>
    <script src="/form.js"></script>
</body>
